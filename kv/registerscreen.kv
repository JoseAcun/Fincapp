<RegisterScreen>:
    #name: "scr_register"
    #md_bg_color: []
    MDCard:
        size_hint: 0.75,0.90
        border_radius: 20
        radius: [15]
        pos_hint: {"center_x":.5,"center_y":.5}
        elevation: 95
        #md_bg_color: [35/255,49/255,48/255,1]
        padding: 20
        spacing: 30
        orientation: "vertical"

        #object properties binding
        usuario_input:txt_usuario
        nombre_completo_input:txt_nombre_completo
        correof_input:txt_correof
        indice_input:txt_indice
        numero_input:txt_numero
        passwordu_input:txt_passwordu
        
        MDLabel:
            text:"Registrar Nuevo Usuario"
            font_style: 'Button'
            font_size: 23
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        MDTextFieldRound:
            id:txt_usuario
            hint_text: "Usuario"
            icon_right: "account"
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x":.5}
            color_active:[1,1,1,1]
        #do this to enable tab keyboard button to cycle through text inputs...    
            write_tab: False
            multiline: False
            on_text_validate: root.foo()
        #
        MDTextFieldRound:
            id:txt_nombre_completo
            hint_text: "Nombre Completo"
            icon_right: "face"
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x":.5}
            color_active:[1,1,1,1]
        #do this to enable tab keyboard button to cycle through text inputs...    
            write_tab: False
            multiline: False
            on_text_validate: root.foo()
        #
        MDTextFieldRound:
            id:txt_correof
            hint_text: "Correo"
            icon_right: "email"
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x":.5}
            color_active:[1,1,1,1]
        #do this to enable tab keyboard button to cycle through text inputs...    
            write_tab: False
            multiline: False
            on_text_validate: root.foo()
        #

        MDTextFieldRound:
            id:txt_indice
            hint_text: "prefijo"
            icon_right: "plus"
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x":.5}
            color_active:[1,1,1,1]
        #do this to enable tab keyboard button to cycle through text inputs...    
            write_tab: False
            multiline: False
            on_text_validate: root.foo()
        #
        MDTextFieldRound:
            id:txt_numero
            hint_text: "numero"
            icon_right: "phone"
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x":.5}
            color_active:[1,1,1,1]
        #do this to enable tab keyboard button to cycle through text inputs...    
            write_tab: False
            multiline: False
            on_text_validate: root.foo()

        #

        MDTextFieldRound:
            id:txt_passwordu
            hint_text: "Constrase√±a"
            icon_right: "eye-off"
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x":.5}
            password: True
            color_active:[1,1,1,1]
        #do this to enable tab keyboard button to cycle through text inputs...      
            write_tab: False
            multiline: False
            on_text_validate: root.foo()
        #                    
        BoxLayout:
            orientation:"horizontal"
            AnchorLayout:        
                MDRoundFlatButton:
                    id: btn_login
                    text: 'Registrarse'
                    font_size: 15
                    #pos_hint: {"center_x":.5}
                    on_release: app.register_user(txt_usuario.text, txt_nombre_completo.text, txt_correof.text, txt_indice.text, txt_numero.text, txt_passwordu.text)
            AnchorLayout:
                MDRoundFlatButton:
                    id: btn_cancel
                    text: 'Cancelar'
                    font_size: 15
                    #pos_hint: {"center_x":.5}
                    on_release: app.change_screen("scr_login", direction='left', mode='push')
        MDLabel:
            id: txt_info_register
            pos_hint: {"center_x":.5}
            size_hint_y: None
            height: 10
            halign: 'center'
            text:""
            text_color: [1,0,0,1]
            markup: True